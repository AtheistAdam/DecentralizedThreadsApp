[app]

# Title of your application
title = DecentralizedThreadsApp

# Package name
package.name = decentralizedthreads

# Package domain (used for Android packaging)
package.domain = org.example

# Source directory where main.py is located
source.dir = .

# Include these file extensions in your package
source.include_exts = py,png,jpg,kv,atlas

# Version of your app
version = 0.1

# List of requirements (dependencies)
requirements = python3,kivy,cryptography

# Orientation (portrait or landscape)
orientation = portrait

# Fullscreen mode
fullscreen = 1

# Android API level to use
android.api = 29

# Android NDK version to use
android.ndk = 21b

# Specify a stable Build Tools version to avoid license issues
android.build_tools_version = 30.0.3

# Use private storage (True) or public (False)
android.private_storage = True

# Automatically accept Android SDK licenses
android.accept_licenses = True
